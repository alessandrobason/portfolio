<style>
#canvas {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;

    opacity: 0;
    transition: opacity 2s;
}

.page-filter {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    backdrop-filter: blur(10px);
}
</style>

<script type="text/javascript">
    let canvas = document.createElement("canvas");
    canvas.id = "canvas";

    const filters = document.getElementsByClassName("page-filter");
    let filt = filters[0];

    const classes = document.getElementsByClassName("page-background");
    let bg = classes[0];

    // add canvas before the filter object
    bg.removeChild(filt);
    bg.appendChild(canvas);
    bg.appendChild(filt);

    var Module = {
        canvas: canvas,
        onRuntimeInitialized() {
            {# canvas.style.display = "block"; #}
            canvas.style.opacity = 1;
        },
    };
</script>
